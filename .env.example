# ==============================================
# EASYFLOWS PRO - CONFIGURATION TEMPLATE
# ==============================================
# ⚠️ IMPORTANT: Ne jamais committer le fichier .env avec les vraies valeurs
# Copier ce fichier en .env et remplir avec vos vraies credentials

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-anon-public-key"
VITE_SUPABASE_URL="https://your-project-id.supabase.co"

# Supabase Service Role Key (Backend only - NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ==============================================
# WEBHOOK SECURITY
# ==============================================
# Secret partagé pour vérifier les signatures des webhooks
WEBHOOK_SECRET="your-secure-random-secret-min-32-chars"

# ==============================================
# MESSENGER360 API
# ==============================================
MESSENGER360_API_KEY="your-messenger360-api-key"
MESSENGER360_API_URL="https://api.messenger360.com/v1"

# ==============================================
# SENTRY MONITORING
# ==============================================
# DSN Sentry pour le monitoring des erreurs
VITE_SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"

# ==============================================
# APPLICATION SETTINGS
# ==============================================
VITE_APP_URL="https://your-domain.com"
NODE_ENV="development"

# ==============================================
# RATE LIMITING
# ==============================================
# Nombre maximum de requêtes par minute par IP
RATE_LIMIT_MAX_REQUESTS="60"
RATE_LIMIT_WINDOW_MS="60000"

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
ADMIN_EMAIL="your-email@domain.com"

# ==============================================
# DEPLOYMENT
# ==============================================
# Utilisé pour Vercel deployment
VERCEL_ENV="production"
